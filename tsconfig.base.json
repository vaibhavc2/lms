{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@lms/*": ["./apps/*", "./libs/*"],
      "@lms/transactional": ["./libs/transactional/*"],
      "@lms/server": ["./apps/server/*"],
      "@lms/client": ["./apps/client/*"]
    }
  },
  "exclude": ["node_modules"]
}
